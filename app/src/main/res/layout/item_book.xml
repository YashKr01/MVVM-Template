<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemBookImage"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@color/colorMargin"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/rounded" />

    <TextView
        android:id="@+id/itemBookName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="@id/itemBookImage"
        app:layout_constraintStart_toEndOf="@id/itemBookImage"
        app:layout_constraintTop_toTopOf="@id/itemBookImage"
        tools:text="Ramayan" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/itemBookImage"
        app:layout_constraintTop_toBottomOf="@id/itemBookImage" />

</androidx.constraintlayout.widget.ConstraintLayout>